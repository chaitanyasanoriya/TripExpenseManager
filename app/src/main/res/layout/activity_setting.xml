<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.techlove.tripexpensemanager.SettingActivity"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Theme"
        android:id="@+id/textView_set_1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/spinner_set_1"
        android:layout_below="@+id/textView_set_1"
        android:layout_centerHorizontal="true"
        android:contextClickable="false"
        android:visibility="visible"
        android:layout_marginTop="20dp"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Week Start"
        android:id="@+id/textView_set_2"
        android:layout_below="@+id/spinner_set_1"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_marginTop="30dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/spinner_set_2"
        android:contextClickable="false"
        android:visibility="visible"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/textView_set_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:minHeight="22dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Save"
        android:id="@+id/button_set_2"
        android:layout_below="@+id/spinner_set_2"
        android:layout_marginTop="30dp"
        android:textSize="24dp"
        android:typeface="serif"
        android:background="#990033"
        android:textColor="#ffffff"
        android:onClick="save"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="About Us"
        android:id="@+id/button_set_1"
        android:layout_below="@+id/button_set_2"
        android:textSize="24dp"
        android:typeface="serif"
        android:background="#990033"
        android:textColor="#ffffff"
        android:onClick="about"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
