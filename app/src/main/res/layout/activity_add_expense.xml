<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccc99"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.techlove.tripexpensemanager.AddExpenseActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff">

        <TextView
            android:id="@+id/textView_add_1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Touch to Add Amount"
            android:inputType="none"
            android:onClick="cal"
            android:textSize="24dp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_add_1"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/textView_add_1"
            android:src="@drawable/money" />

        <TextView
            android:id="@+id/textView_add_o1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="20dp"
            android:text="Category : "
            android:textColor="#000000"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spinner_add_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/textView_add_1"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/textView_add_o1"
            android:hint="Category"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/textView_add_o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_add_2"
            android:layout_marginTop="60dp"
            android:text="Date : "
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_add_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/datePicker_add_1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:hint="Where"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/editText_add_3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/editText_add_2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:hint="Payment Method"
            android:textSize="24dp" />

        <DatePicker
            android:id="@+id/datePicker_add_1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/spinner_add_2"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/textView_add_o"
            android:calendarViewShown="false"
            android:datePickerMode="spinner" />

        <EditText
            android:id="@+id/editText_add_4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/editText_add_3"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:hint="Comment"
            android:textSize="24dp" />

        <Button
            android:id="@+id/button_add_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/editText_add_4"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="#990033"
            android:onClick="save"
            android:text="Save"
            android:textColor="#ffffff"
            android:textSize="30dp" />
    </RelativeLayout>
</RelativeLayout>
