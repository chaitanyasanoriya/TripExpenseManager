<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.techlove.tripexpensemanager.UpdateBugActivity"
    android:background="#cccc99">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Update Monthly Budget"
            android:id="@+id/textView_up_1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="26dp"
            android:typeface="serif"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Name : "
            android:layout_below="@+id/textView_up_1"
            android:textSize="22dp"
            android:textColor="#000000"
            android:layout_marginTop="50dp"
            android:id="@+id/textView_up_2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Phone : "
            android:layout_below="@+id/textView_up_2"
            android:textSize="22dp"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:id="@+id/textView_up_3"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_up_3"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="New Budget"
            android:textAlignment="center"
            android:textSize="28dp"
            android:id="@+id/editText_up_1"
            android:inputType="number"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/editText_up_1"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#990033"
            android:text="Save"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:typeface="serif"
            android:onClick="save2"/>

    </RelativeLayout>
</RelativeLayout>
