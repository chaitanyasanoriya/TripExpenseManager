<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccc99"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.techlove.tripexpensemanager.AddExpenseActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff">

        <TextView
            android:id="@+id/textView_view_1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="none"
            android:text="Amount : "
            android:textColor="#000000"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/imageView_view_1"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_view_1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/textView_view_1"
            android:src="@drawable/money" />

        <TextView
            android:id="@+id/textView_view_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_view_1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Category : "
            android:textColor="#000000"
            android:textSize="28dp" />

        <ImageView
            android:id="@+id/imageView_view_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/money"
            android:layout_marginRight="10dp"
            android:layout_above="@+id/textView_view_3"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView_view_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Date : "
            android:textColor="#000000"
            android:textSize="28dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/textView_view_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place : "
            android:textColor="#000000"
            android:textSize="28dp"
            android:layout_below="@+id/textView_view_3"
            android:layout_alignStart="@+id/textView_view_3"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/textView_view_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Method : "
            android:textColor="#000000"
            android:textSize="28dp"
            android:layout_below="@+id/textView_view_4"
            android:layout_alignStart="@+id/textView_view_4"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/textView_view_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comment : "
            android:textColor="#000000"
            android:textSize="28dp"
            android:layout_below="@+id/textView_view_5"
            android:layout_alignStart="@+id/textView_view_5"
            android:layout_marginTop="15dp"/>

    </RelativeLayout>
</RelativeLayout>
