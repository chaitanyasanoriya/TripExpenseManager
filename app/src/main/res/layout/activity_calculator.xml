<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CalculatorActivity"
    android:id="@+id/relative1"
    android:background="#cccc99">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt1"
            android:textSize="34dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="1"
            android:id="@+id/button1"
            android:layout_below="@+id/edt1"
            android:layout_marginTop="40dp"
            android:background="#990033"
            android:textColor="#ffffff"
            android:textSize="24dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="2"
            android:id="@+id/button2" android:layout_toRightOf="@+id/button1"
            android:layout_below="@+id/edt1"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="1dp"
            android:background="#990033"
            android:textColor="#ffffff"
            android:textSize="24dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="3"
            android:id="@+id/button3"
            android:background="#990033"
            android:layout_below="@+id/edt1"
            android:layout_toRightOf="@+id/button2"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="40dp"
            android:textColor="#ffffff"
            android:textSize="24dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="4"
            android:id="@+id/button4"
            android:background="#990033"
            android:layout_below="@+id/button1"
            android:layout_marginTop="1dp"
            android:textColor="#ffffff"
            android:textSize="24dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="5"
            android:id="@+id/button5"
            android:background="#990033"
            android:layout_below="@+id/button2"
            android:layout_toRightOf="@+id/button4"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:textColor="#ffffff"
            android:textSize="24dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="6"
            android:id="@+id/button6"
            android:background="#990033"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:layout_below="@id/button3"
            android:layout_toRightOf="@id/button5"
            android:textColor="#ffffff"
            android:textSize="24dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="7"
            android:id="@+id/button7"
            android:background="#990033"
            android:layout_marginTop="1dp"
            android:layout_below="@+id/button4"
            android:textColor="#ffffff"
            android:textSize="24dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="8"
            android:id="@+id/button8"
            android:background="#990033"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:layout_below="@+id/button5"
            android:layout_toRightOf="@+id/button7"
            android:textColor="#ffffff"
            android:textSize="24dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="9"
            android:id="@+id/button9"
            android:background="#990033"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:layout_below="@+id/button6"
            android:layout_toRightOf="@+id/button8"
            android:textColor="#ffffff"
            android:textSize="24dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="+"
            android:id="@+id/buttonadd"
            android:background="#990033"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/button3"
            android:layout_below="@+id/edt1"
            android:textColor="#ffffff"
            android:textSize="24dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="-"
            android:id="@+id/buttonsub"
            android:background="#990033"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:layout_below="@id/buttonadd"
            android:layout_toRightOf="@id/button6"
            android:textColor="#ffffff"
            android:textSize="24dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="*"
            android:id="@+id/buttonmul"
            android:background="#990033"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:layout_below="@+id/buttonsub"
            android:layout_toRightOf="@+id/button9"
            android:textColor="#ffffff"
            android:textSize="24dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="."
            android:id="@+id/button10"
            android:background="#990033"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:layout_below="@+id/button7"
            android:layout_marginTop="1dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="0"
            android:id="@+id/button0"
            android:background="#990033"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:layout_below="@id/button8"
            android:layout_toRightOf="@+id/button10"
            android:textColor="#ffffff"
            android:textSize="24dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:text="C"
            android:id="@+id/buttonC"
            android:background="#990033"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:layout_below="@+id/button9"
            android:layout_toRightOf="@+id/button0"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="/"
            android:id="@+id/buttondiv"
            android:background="#990033"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:layout_below="@+id/buttonmul"
            android:layout_toRightOf="@id/buttonC"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="="
            android:id="@+id/buttoneql"
            android:layout_below="@id/button10"
            android:background="#990033"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:layout_marginTop="1dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="Done"
            android:id="@+id/buttonback"
            android:layout_below="@id/buttoneql"
            android:layout_alignParentBottom="true"
            android:background="#990033"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:layout_marginTop="1dp"
            android:onClick="back"/>
    </RelativeLayout>

</RelativeLayout>